<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_place"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F3"
    tools:context="fr.wildcodeschool.apprenti.sportihome.PlaceActivity">


    <RelativeLayout
        android:id="@+id/block_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/place_img"
                android:background="#AAA"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

        <RelativeLayout
            android:layout_alignBottom="@+id/place_img"
            android:layout_alignRight="@+id/place_img"
            android:layout_width="wrap_content"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/price"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/opaque_black"
                android:layout_width="100dp"
                android:padding="5dp"
                android:layout_height="match_parent" />

            <TextView
                android:background="@color/blue"
                android:layout_toRightOf="@+id/price"
                android:layout_width="5dp"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/place_details"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_below="@+id/place_img"
            android:layout_alignParentStart="true"
            android:layout_height="100dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_avatar"
                android:src="@drawable/default_avatar"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/name_user"
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_alignStart="@+id/img_avatar"
                android:layout_marginStart="10dp"

                android:layout_below="@+id/img_avatar"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/title_place"
                android:textSize="20dp"
                android:maxLines="1"
                android:maxLength="23"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_alignStart="@+id/title_place"
                android:layout_below="@+id/title_place"
                />

            <TextView
                android:id="@+id/region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/city"
                android:layout_below="@+id/title_place" />

            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/region"
                android:layout_below="@+id/title_place"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:theme="@style/RatingBar"
                android:numStars="5"
                android:stepSize="1.0"
                android:rating="3"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/country"
                android:layout_alignStart="@+id/title_place" />

            <TextView
                android:id="@+id/rating_count"
                android:layout_below="@+id/country"
                android:layout_toRightOf="@+id/ratingBar"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />




        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/place_engagement"
            android:layout_width="match_parent"
            android:layout_below="@+id/place_details"
            android:background="@color/white"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/engagement"
                android:layout_marginStart="23dp"
                android:layout_marginTop="15dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/sport"
                android:layout_alignParentStart="true" />


            <fr.wildcodeschool.apprenti.sportihome.CustomFontTextView
                android:id="@+id/sports"
                android:layout_toEndOf="@+id/engagement"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:textSize="30dp"
                app:font="@string/sports_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Sport de l'HÃ´te"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_sports_owner"
                android:layout_alignBottom="@+id/engagement"
                android:layout_alignStart="@+id/sports" />

            <fr.wildcodeschool.apprenti.sportihome.CustomFontTextView
                android:id="@+id/imgProperty"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                app:font="@string/sportihome_ux_font"
                android:layout_alignTop="@+id/sports"
                android:layout_toEndOf="@+id/sports"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/txtProperty"
                android:maxLength="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txt_sports_owner"
                android:layout_alignBottom="@+id/txt_sports_owner"
                android:layout_alignStart="@+id/imgProperty"
                android:layout_toEndOf="@+id/sports"
                 />

            <ImageView
                android:id="@+id/imgTravellers"
                app:srcCompat="@drawable/travellers"
                android:layout_height="30dp"
                android:layout_width="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="8dp"

                android:layout_alignTop="@+id/imgProperty"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/txtTravellers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtProperty"
                android:layout_alignBottom="@+id/txtProperty"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="28dp" />


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about_place"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="#f2f4f3"
        android:layout_below="@+id/block_place"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A propos"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="18dp"/>


    </RelativeLayout>

</RelativeLayout>
